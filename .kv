<Loading>:
    auto_dismiss: False
    overlay_color: (0,0, 0,.1)
    background_color: (1, 1, 1, 0)
    background: "white"
    size_hint: .8, .5
    

MainWidget:
    orientation:'vertical'
    canvas:
        Rectangle:
            size: self.size  
            source: "data/background2.png"
    TextInput:
        id: textinput
        text: "       Type video's absolute path here"
        pos: dp(896/2), dp(540/2)
        size: dp(812/2), dp(70/2)
        focus: False
        on_focus: root.clear_text(self, convert)
        multiline: False
        background_normal: "data/textinput_normal.png"
        background_active: "data/textinput_active.png"
    BoxLayout:
        size: dp(550/2), dp(74/2)
        pos: dp(578), dp(230)
        spacing: '3dp'
        Button:
            id: brower
            on_release: root.brower_pressed(convert, textinput)
            on_press: root.brower_press()
            background_normal: "data/browse_normal.png"
            background_down: "data/browse_down.png"
        Button:
            id: convert
            background_normal: "data/button_normal.png"
            background_down: "data/button_down.png"
            on_release: root.convert_pressed(self, textinput)
        
    
    BoxLayout:
        orientation:'vertical'
        size_hint: None, None
        size: '40dp', '60dp'
        x: root.width-dp(160)
        y: dp(20)
        Label:
            text:'size'
            color: "black"
        TextInput:
            id: dpi_input
            input_filter: "int"
            text:'750'

